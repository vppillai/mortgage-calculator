{
    "openapi": "3.0.0",
    "info": {
        "title": "Canadian Mortgage Calculator API Interface",
        "description": "API interface documentation for potential future backend integration. Currently, all operations are client-side only.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://api.example.com/v1",
            "description": "Future API server (not implemented)"
        }
    ],
    "paths": {
        "/calculate": {
            "post": {
                "summary": "Calculate mortgage payment",
                "description": "Calculates mortgage payment details based on provided parameters",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/MortgageCalculationRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful calculation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CalculationResult"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input parameters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/scenarios": {
            "get": {
                "summary": "List saved scenarios",
                "description": "Retrieves all saved mortgage scenarios for a user",
                "responses": {
                    "200": {
                        "description": "List of scenarios",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/MortgageScenario"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Save a scenario",
                "description": "Saves a new mortgage scenario",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/MortgageScenario"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Scenario created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MortgageScenario"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "MortgageCalculationRequest": {
                "type": "object",
                "required": [
                    "principal",
                    "interestRate",
                    "amortizationMonths",
                    "paymentFrequency"
                ],
                "properties": {
                    "principal": {
                        "type": "number",
                        "minimum": 1,
                        "maximum": 10000000,
                        "description": "Loan amount in CAD"
                    },
                    "interestRate": {
                        "type": "number",
                        "minimum": 0.01,
                        "maximum": 30,
                        "description": "Annual interest rate as percentage"
                    },
                    "amortizationMonths": {
                        "type": "integer",
                        "minimum": 12,
                        "maximum": 300,
                        "description": "Total loan term in months"
                    },
                    "paymentFrequency": {
                        "type": "string",
                        "enum": [
                            "monthly",
                            "bi-weekly",
                            "weekly"
                        ],
                        "description": "Payment frequency"
                    },
                    "prepaymentOptions": {
                        "type": "object",
                        "properties": {
                            "enabled": {
                                "type": "boolean"
                            },
                            "extraPaymentAmount": {
                                "type": "number",
                                "minimum": 0
                            },
                            "extraPaymentFrequency": {
                                "type": "string",
                                "enum": [
                                    "per-payment",
                                    "annual",
                                    "one-time"
                                ]
                            }
                        }
                    }
                }
            },
            "CalculationResult": {
                "type": "object",
                "properties": {
                    "regularPayment": {
                        "type": "number",
                        "description": "Regular payment amount in CAD"
                    },
                    "totalPayments": {
                        "type": "integer",
                        "description": "Total number of payments"
                    },
                    "totalInterest": {
                        "type": "number",
                        "description": "Total interest paid over life of loan"
                    },
                    "totalCost": {
                        "type": "number",
                        "description": "Principal plus total interest"
                    },
                    "payoffDate": {
                        "type": "string",
                        "format": "date",
                        "description": "Final payment date"
                    },
                    "prepayment": {
                        "type": "object",
                        "properties": {
                            "actualPayoffDate": {
                                "type": "string",
                                "format": "date"
                            },
                            "totalInterestSaved": {
                                "type": "number"
                            },
                            "monthsSaved": {
                                "type": "integer"
                            }
                        }
                    }
                }
            },
            "MortgageScenario": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "loanDetails": {
                        "$ref": "#/components/schemas/MortgageCalculationRequest"
                    },
                    "calculationResults": {
                        "$ref": "#/components/schemas/CalculationResult"
                    }
                }
            },
            "ValidationError": {
                "type": "object",
                "properties": {
                    "field": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    }
                }
            }
        }
    }
}