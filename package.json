{
    "name": "mortgage-prepayment-calculator",
    "version": "1.0.0",
    "description": "Mortgage prepayment calculator with advanced comparison and sharing features",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "prebuild": "node scripts/inject-version.js && node scripts/generate-icons.js",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:e2e": "playwright test",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src --ext .js",
        "format": "prettier --write \"src/**/*.{js,css,html}\""
    },
    "dependencies": {
        "decimal.js": "^10.4.3",
        "html2canvas": "^1.4.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.1",
        "@vitejs/plugin-legacy": "^5.2.0",
        "@vitest/coverage-v8": "^1.1.0",
        "@vitest/ui": "^1.1.0",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "jsdom": "^27.0.1",
        "postcss": "^8.4.32",
        "prettier": "^3.1.1",
        "sharp": "^0.34.4",
        "tailwindcss": "^3.4.0",
        "vite": "^5.0.10",
        "vite-plugin-pwa": "^0.17.4",
        "vitest": "^1.1.0"
    },
    "keywords": [
        "mortgage",
        "calculator",
        "prepayment",
        "finance",
        "amortization",
        "comparison"
    ],
    "author": "",
    "license": "MIT"
}
